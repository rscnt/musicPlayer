Private Function cambiarPausa() As Boolean
  
  Dim estado As Boolean
  
  If $reproductor.State = $reproductor.Paused Then
    Try $reproductor.Play
    estado = True
  Else
    Try $reproductor.Pause
    estado = False
  Endif
  
  Return estado
  
End

Private Function pararReproduccion()
  
  $reproductor.Stop
  
End

